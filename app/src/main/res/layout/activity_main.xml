<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_hor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_hor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.76" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_hor5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_ver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_ver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_ver3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine_hor6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <TextView
        android:id="@+id/textView_expression"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#B0000000"
        android:gravity="end|bottom"
        android:paddingBottom="30dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#B0000000"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver1"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver3"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_AC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow2"
        android:textColor="@color/white"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver1"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor2"
        android:text="AC" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_persen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="@color/orange"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver1"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver2"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor2"
        android:text="%" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bagi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="@color/orange"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver2"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver3"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor2"
        android:text="/" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kali"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="@color/orange"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor2"
        android:text="x" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tujuh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver1"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor3"
        android:text="7" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delapan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver1"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver2"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor3"
        android:text="8" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sembilan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver2"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver3"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor3"
        android:text="9" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tambah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="@color/orange"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor3"
        android:text="+" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_empat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver1"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor3"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor4"
        android:text="4" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_lima"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver1"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver2"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor3"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor4"
        android:text="5" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver2"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver3"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor3"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor4"
        android:text="6" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_kurang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="@color/orange"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor3"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor4"
        android:text="-" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_satu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver1"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor4"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor5"
        android:text="1" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dua"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver1"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver2"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor4"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor5"
        android:text="2" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tiga"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver2"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver3"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor4"
        app:layout_constraintBottom_toBottomOf="@id/guideLine_hor5"
        android:text="3" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_samaDengan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow2"
        android:textColor="@color/white"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="=" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_nol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="#B0000000"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver2"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_titik"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/shadow"
        android:textColor="@color/orange"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="@id/guideLine_ver2"
        app:layout_constraintEnd_toEndOf="@id/guideLine_ver3"
        app:layout_constraintTop_toTopOf="@id/guideLine_hor5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="." />

</androidx.constraintlayout.widget.ConstraintLayout>